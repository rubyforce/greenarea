<div class="green item">
  <a class="sign-in fancybox.ajax" href="<%= new_user_session_path %>"><i class="home icon "></i> Sign in</a>
</div>
<div class="red item">
  <a class="sign-up fancybox.ajax" href="<%= new_user_registration_path %>"><i class="home icon"></i> Sign up</a>
</div>
<script>
	$(document).ready(function() {
		$(".sign-in").fancybox({
			maxWidth	: 500,
			maxHeight	: 200,
			fitToView	: false,
			width		: '70%',
			height		: '70%',
			autoSize	: false,
			closeClick	: 'none',
			openEffect	: 'none',
			closeEffect	: 'none'
		});

		$(".sign-up").fancybox({
			maxWidth	: 500,
			maxHeight	: 200,
			fitToView	: false,
			width		: '70%',
			height		: '70%',
			autoSize	: false,
			closeClick	: 'none',
			openEffect	: 'none',
			closeEffect	: 'none'
		});
	});
</script>
