<% unless current_user.present? %>
  <div class="green item">
    <a class="sign-in fancybox.ajax" href="<%= new_user_session_path %>"><i class="sign in icon "></i> Sign in</a>
  </div>
  <div class="red item">
    <a class="sign-up fancybox.ajax" href="<%= new_user_registration_path %>"><i class="sign up icon"></i> Sign up</a>
  </div>
<% else %>
  <div class="green item">
    <a class="user fancybox.ajax" href="<%= edit_user_registration_path %>"><i class="user icon "></i> Profile</a>
  </div>
  <div class="red item">
    <%= link_to('Log Out', destroy_user_session_path, :method => :delete)%><i class="sign out icon"></i>
  </div>
<% end %>
