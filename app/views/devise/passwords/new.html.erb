<div class="ui form segment">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :remote => true) do |f| %>
    <div class="field">
      <label>Email</label>
        <div class="ui left labeled icon input">
          <%= f.email_field :email, placeholder: "E-mail"%>
          <i class="user icon"></i>
          <div class="ui corner label">
            <i class="icon asterisk"></i>
          </div>
        </div>
      </div>
      <div>
        <%= f.submit "Send me reset password instructions", class: "ui blue submit button" %>
      </div>
    </div>
  <% end %>
</div>
